# Environment Configuration Template
# Copy this file to .env and fill in your production values

# ==================== DATABASE CONFIGURATION ====================
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=root
DB_NAME=calzone_pay

# ==================== JWT CONFIGURATION ====================
# Generate a strong random secret: openssl rand -base64 64
JWT_SECRET=CHANGE_THIS_TO_RANDOM_64_CHAR_STRING_IN_PRODUCTION

# ==================== SERVER CONFIGURATION ====================
PORT=3000
NODE_ENV=production

# ==================== EMAIL CONFIGURATION ====================
# For Gmail: Enable 2FA and create App Password
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password
EMAIL_FROM=noreply@yourdomain.com

# ==================== RAZORPAY CONFIGURATION ====================
# Get from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_live_YOUR_KEY_ID
RAZORPAY_KEY_SECRET=YOUR_RAZORPAY_SECRET

# ==================== ALLBILLS API CONFIGURATION ====================
ALLBILLS_CUSTOMER_ID=3176029605
ALLBILLS_TOKEN=6FGuGViLkD0f4Y2UppBonx00l
ALLBILLS_BASE_URL=https://api.allbills.in

# ==================== FRONTEND CONFIGURATION ====================
FRONTEND_URL=https://yourdomain.com
ADMIN_PANEL_URL=https://admin.yourdomain.com

# ==================== ADMIN CONFIGURATION ====================
ADMIN_EMAIL=admin@yourdomain.com
SUPPORT_EMAIL=support@yourdomain.com

# ==================== SECURITY CONFIGURATION ====================
# Session timeout in hours
SESSION_TIMEOUT=24

# Maximum login attempts before lockout
MAX_LOGIN_ATTEMPTS=5

# Lockout duration in minutes
LOCKOUT_DURATION=30

# ==================== FILE UPLOAD CONFIGURATION ====================
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# ==================== LOGGING CONFIGURATION ====================
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# ==================== RATE LIMITING ====================
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# ==================== CORS CONFIGURATION ====================
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ==================== BACKUP CONFIGURATION ====================
BACKUP_DIR=/var/backups/calzone-pay
BACKUP_RETENTION_DAYS=7

# ==================== NOTIFICATION CONFIGURATION ====================
# SMS API Configuration (Optional)
SMS_API_KEY=your_sms_api_key
SMS_SENDER_ID=CALZONE

# Push Notification (Optional)
FIREBASE_SERVER_KEY=your_firebase_server_key

# ==================== PAYMENT GATEWAY WEBHOOKS ====================
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# ==================== MONITORING ====================
# Sentry DSN (Optional)
SENTRY_DSN=https://your-sentry-dsn

# ==================== FEATURE FLAGS ====================
ENABLE_PARTNER_REGISTRATION=true
ENABLE_WALLET_TRANSFERS=true
ENABLE_BILL_PAYMENTS=true
ENABLE_TRAVEL_BOOKING=false
ENABLE_MONEY_TRANSFER=true

# ==================== COMMISSION RATES (Default) ====================
DEFAULT_B2C_COMMISSION=2.00
DEFAULT_B2B_PARTNER_COMMISSION=3.00
DEFAULT_B2B_PLATFORM_COMMISSION=1.50

# ==================== WITHDRAWAL LIMITS ====================
MIN_WITHDRAWAL_AMOUNT=100
MAX_WITHDRAWAL_AMOUNT=50000
WITHDRAWAL_PROCESSING_FEE=0

# ==================== WALLET LIMITS ====================
MIN_WALLET_BALANCE=0
MAX_WALLET_BALANCE=100000
MIN_ADD_MONEY_AMOUNT=10
MAX_ADD_MONEY_AMOUNT=10000

# ==================== KYC CONFIGURATION ====================
KYC_AUTO_APPROVE=false
KYC_DOCUMENT_MAX_SIZE=2097152

# ==================== MAINTENANCE MODE ====================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=We are currently under maintenance. Please check back soon.

# ==================== API VERSIONING ====================
API_VERSION=v1

# ==================== TIMEZONE ====================
TZ=Asia/Kolkata

# ==================== DEBUG ====================
DEBUG=false
VERBOSE_LOGGING=false
